
<div class="container"> 
<div class="jumbotron">
		<h1> Handcrafted beers!</h1>
		<br>
		<p>Discover one-of-a-kind items</p>
		<br>
		<p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
	</div>

<div class="center">
	<div class="row">
		<% @listings.each do |listing| %>
		<div class="col-sm-3">
			<div class="thumbnail">
				<%= link_to image_tag(listing.image.url), listing %>
				<div class="caption">
				        <h3><%=listing.name %></h3>
				        <p><%=listing.description %></p>
        				<p>Price: <%=listing.price %></p>
					<% if listing.user %>
						<p><%= "Sold by #{listing.user.name}" %></p>
					<% end %>
					<p>
			                <% if user_signed_in? && current_user == listing.user %>	
					  <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %> 
					  <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
				        <% end %>
					</p>
				</div>
			</div>
		</div>
    		<% end %>
	</div>
</div>
</div>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
